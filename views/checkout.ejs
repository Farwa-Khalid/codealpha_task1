<%- include('partials/header') %>

<div class="checkout-container">
  <h2>Checkout</h2>

  <form action="/checkout" method="POST" class="checkout-form" id="checkoutForm">
    <div class="form-group">
      <label for="fullName">Full Name</label>
      <input type="text" id="fullName" name="fullName" required>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" id="email" name="email" required>
    </div>

    <div class="form-group">
      <label for="address">Shipping Address</label>
      <textarea id="address" name="address" rows="3" required></textarea>
    </div>

    <div class="form-group">
      <label for="city">City</label>
      <input type="text" id="city" name="city" required>
    </div>

    <div class="form-group">
      <label for="zip">ZIP / Postal Code</label>
      <input type="text" id="zip" name="zip" required>
    </div>

    <div class="form-group">
      <label for="paymentMethod">Payment Method</label>
      <select id="paymentMethod" name="paymentMethod" required>
        <option value="">-- Select Payment Method --</option>
        <option value="cod">Cash on Delivery</option>
        <option value="credit_card">Credit Card</option>
      </select>
    </div>

    <div class="form-group" id="gatewayContainer" style="display:none;">
      <label for="paymentGateway">Payment Gateway</label>
      <select id="paymentGateway" name="paymentGateway">
        <option value="">-- Select Payment Gateway --</option>
        <option value="jazzcash">JazzCash (PK)</option>
        <option value="2checkout">2Checkout (International)</option>
      </select>
    </div>

    <div id="creditCardFields" style="display:none;">
      <div class="form-group">
        <label for="cardName">Cardholder Name</label>
        <input type="text" id="cardName" name="cardName" placeholder="John Doe">
      </div>
      <div class="form-group">
        <label for="cardNumber">Card Number</label>
        <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456" maxlength="16">
      </div>
      <div class="form-group">
        <label for="expiry">Expiry Date (MM/YY)</label>
        <input type="text" id="expiry" name="expiry" placeholder="MM/YY" maxlength="5">
      </div>
      <div class="form-group">
        <label for="cvv">CVV</label>
        <input type="text" id="cvv" name="cvv" placeholder="123" maxlength="4">
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
    <button type="button" onclick="window.location.href='/cart'" class="btn btn-secondary">Back to Cart</button>
  </form>
</div>

<script>
  const paymentSelect = document.getElementById("paymentMethod");
  const gatewaySelect = document.getElementById("paymentGateway");
  const gatewayContainer = document.getElementById("gatewayContainer");
  const creditCardFields = document.getElementById("creditCardFields");
  const checkoutForm = document.getElementById("checkoutForm");

  const toggleCardFields = () => {
    if (paymentSelect.value === "credit_card") {
      gatewayContainer.style.display = "block"; // Show gateway selection
      if (gatewaySelect.value === "jazzcash" || gatewaySelect.value === "2checkout") {
        creditCardFields.style.display = "block"; // Show card fields only if gateway selected
      } else {
        creditCardFields.style.display = "none";
      }
    } else {
      gatewayContainer.style.display = "none";  // Hide gateway dropdown
      creditCardFields.style.display = "none";  // Hide card fields
    }
  };

  paymentSelect.addEventListener("change", toggleCardFields);
  gatewaySelect.addEventListener("change", toggleCardFields);

  // Form validation
  checkoutForm.addEventListener("submit", (e) => {
    if (
      paymentSelect.value === "credit_card" &&
      (gatewaySelect.value === "jazzcash" || gatewaySelect.value === "2checkout")
    ) {
      const cardName = document.getElementById("cardName").value.trim();
      const cardNumber = document.getElementById("cardNumber").value.trim();
      const expiry = document.getElementById("expiry").value.trim();
      const cvv = document.getElementById("cvv").value.trim();

      if (!cardName || !cardNumber || !expiry || !cvv) {
        e.preventDefault();
        alert("Please fill all credit card details.");
        return;
      }

      const cardNumberRegex = /^\d{16}$/;
      const cvvRegex = /^\d{3,4}$/;
      const expiryRegex = /^(0[1-9]|1[0-2])\/\d{2}$/;

      if (!cardNumberRegex.test(cardNumber)) {
        e.preventDefault();
        alert("Invalid card number. Must be 16 digits.");
        return;
      }
      if (!cvvRegex.test(cvv)) {
        e.preventDefault();
        alert("Invalid CVV. Must be 3 or 4 digits.");
        return;
      }
      if (!expiryRegex.test(expiry)) {
        e.preventDefault();
        alert("Invalid expiry date. Format MM/YY.");
        return;
      }
    }
  });
</script>

<%- include('partials/footer') %>
